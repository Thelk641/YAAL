<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:svg="using:Svg.Controls.Skia.Avalonia"
			 xmlns:local="clr-namespace:YAAL"
             x:Class="YAAL.VersionFile"
             HorizontalAlignment="Stretch"
             MinHeight="38"
			 MinWidth="200"
             >
	<Border
		Padding="0,4,0,4"
		>
		<Grid ColumnDefinitions="*,8,30,8,30,8,30">
			<TextBox
				Name="Target"
				Height="30"
				/>
			
			<Button
					Name="FileTarget"
					Width="30"
					Height="30"
					Grid.Column="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					local:AutoIcon.Icon="File"
					ToolTip.Tip="Select a file"
					>
				<Svg
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="30"
						/>
			</Button>

			<Button
					Name="FolderTarget"
					Width="30"
					Height="30"
					Grid.Column="4"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					local:AutoIcon.Icon="Folder"
					ToolTip.Tip="Select a folder"
						>
				<Svg
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="20"
						/>
			</Button>

			<Button
					Name="RemoveVersion"
					Width="30"
					Height="30"
					Grid.Column="6"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					local:AutoIcon.Icon="Minus"
					ToolTip.Tip="Select a folder"
						>
				<Svg
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="20"
						/>
			</Button>	
		</Grid>
	</Border>
</UserControl>

