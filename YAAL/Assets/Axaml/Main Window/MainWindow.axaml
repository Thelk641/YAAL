<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="700"
        Height="400"
		MinHeight="300"
        MinWidth="700"
        x:Class="YAAL.MainWindow"
        Title="Yet Another Archipelago Launcher"
		>
	<Border Padding="8">
		<Grid RowDefinitions="40,8,*">
			<!-- First line, buttons -->
			<Grid ColumnDefinitions="180,*,95,8,130" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
				<Button
					Grid.Column="0"
					Name="CLMakerButton"
					Content="Custom Launcher editor"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					/>
				<Button
					Grid.Column="4"
					Name="SettingsButton"
					Content="General settings"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					/>
			</Grid>

			<Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2">
				<ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<StackPanel>
						<StackPanel Name="AsyncContainer" />
						<Grid ColumnDefinitions="*,95,*">
							<Button
								Grid.Column="1"
								Name="AddNewAsync"
								Content="New async"
								HorizontalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								/>
						</Grid>
						<Rectangle 
							Height="8"
							/>
					</StackPanel>

				</ScrollViewer>
			</Border>
		</Grid>
	</Border>
</Window>
