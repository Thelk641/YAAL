<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="600"
        Height="400"
		MinHeight="300"
        MinWidth="300"
        x:Class="YAAL.MainWindow"
        Title="Yet Another Archipelago Launcher">
	<Border Padding="8">
		<Grid RowDefinitions="40,8,*">
			<!-- First line, buttons -->
			<Grid ColumnDefinitions="180,*,130" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
				<Button
					Grid.Column="0"
					Name="CLMakerButton"
					Content="Custom Launcher editor"
				/>
				<Button
					Grid.Column="2"
					Name="SettingsButton"
					Content="General settings"
				/>
			</Grid>
		</Grid>
	</Border>
</Window>
