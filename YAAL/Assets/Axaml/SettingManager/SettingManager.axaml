<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="475"
        Height="500"
        MinHeight="300"
        MinWidth="300"
        x:Class="YAAL.SettingManager"
        Title="YAAL settings manager">
	<ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<Border Margin="8">
			<Grid RowDefinitions="*, 30">
				<StackPanel Name="SettingContainer">
					<StackPanel Name="GeneralSettingContainer" />
					<StackPanel Name="FixedSettingContainer" />
					<StackPanel Name="CustomSettingContainer" />
					<StackPanel Name="InternalSettingContainer" />
					<StackPanel Name="ToolSettingContainer" />
				</StackPanel>
				<Button
					Name="addSetting"
					Grid.Row="1"
					Content="Add a custom setting"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
				/>
			</Grid>
		</Border>
	</ScrollViewer>
</Window>
