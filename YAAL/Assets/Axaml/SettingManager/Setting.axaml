<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:svg="using:Svg.Controls.Skia.Avalonia"
			 xmlns:local="clr-namespace:YAAL"
             x:Class="YAAL.Setting"
             HorizontalAlignment="Stretch"
             MinHeight="30"
			 MinWidth="270"
             >
	<Border Margin="8,4,8,4">
	  <StackPanel>
		  <Separator Name="Separator"/>
		  <Rectangle Height="8"/>
		<Grid ColumnDefinitions="*, 8, 20, 8, *" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="30" Grid.Column="0">
			<TextBox
				IsVisible="False"
				Name="CustomName"
				Grid.Column="0"
				VerticalAlignment="Center"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				ToolTip.Tip="The name is used to use settings as shortcuts via ${name}"
				/>
			<TextBlock 
				IsVisible="True"
				Text="A setting name"
				Name="SetName"
				Grid.Column="0"
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				ToolTip.Tip="The name is used to use settings as shortcuts via ${name}"
				/>
			<TextBlock
				Text="=>"
				Grid.Column="2"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="25"
				/>
			<Grid ColumnDefinitions="*,8,30" Name="ValueGrid" Grid.Column="4">
				<TextBlock
					IsVisible="True"
					Name="SetValue"
					Text="A setting value"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					Grid.ColumnSpan="3"
					/>
				<Grid 
					Grid.ColumnSpan="3" 
					Grid.Column="0" 
					ColumnDefinitions="*,8,30,8,30" 
					IsVisible="False" 
					Name="CustomValueContainer"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					>
					<TextBox
					Name="CustomValue"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					/>
					<Button 
						Name="File"
						Grid.Column="2" 
						HorizontalAlignment="Stretch" 
						VerticalAlignment="Stretch"
						local:AutoIcon.Icon="File"
						local:VisibilityHolder.VisibilityHolder="CustomValueContainer"
						>
						<Svg Path="avares://YAAL/Assets/Icons/File_dark.svg"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Width="30"
							Name="FileIcon"
							/>
					</Button>
					<Button
						Name="SpecialMode"
						Grid.Column="4"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						local:AutoIcon.Icon="Settings"
							local:VisibilityHolder.VisibilityHolder="CustomValueContainer"
						>
						<Svg Path="avares://YAAL/Assets/Icons/Settings_dark.svg"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Width="30"
							Name="SpecialModeIcon"
							/>
					</Button>
				</Grid>

				<ComboBox
					IsVisible="False"
					Name="BinaryValue"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					Grid.ColumnSpan="3"
					/>
				<Grid 
					ColumnDefinitions="*,8,30" 
					Name="ColorContainer" 
					Grid.Column="0"
					Grid.ColumnSpan="3"
					IsVisible="False"
					>
					<Button
							Name="ColorValue"
							Height="30"
							Grid.Column="0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Background="Blue"
						/>
					<Button
						Name="ColorModeOff"
							Grid.Column="2"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							local:AutoIcon.Icon="Settings"
						>
						<Svg Path="avares://YAAL/Assets/Icons/Settings_dark.svg"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Width="30"
							Name="ColorModeIcon"
							/>
					</Button>
				</Grid>



				<Grid
					ColumnDefinitions="*,8,30"
					Name="SliderContainer"
					Grid.Column="0" 
					Grid.ColumnSpan="3"
					IsVisible="False"
					>
					<Grid
					RowDefinitions="*,*"
					Grid.Column="0"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					>

						<Grid ColumnDefinitions="20,*,20,*,20">
							<TextBlock
								Text="{Binding #slider.Minimum}"
								Grid.Column="0"
								/>
							<TextBlock
								Text="{Binding #slider.Value}"
								Grid.Column="2"
								/>
							<TextBlock
								Text="{Binding #slider.Maximum}"
								Grid.Column="4"
								/>
						</Grid>
						<Slider
							x:Name="slider"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Center"
							Grid.Row="1"
							Minimum="0.1"
							Maximum="2"
							Height="50"
						/>
					</Grid>

					<Button
						Name="SliderModeOff"
						Grid.Column="2"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						local:AutoIcon.Icon="Settings"
						>
						<Svg Path="avares://YAAL/Assets/Icons/Settings_dark.svg"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Width="30"
							Name="SliderModeIcon"
							/>
					</Button>
						
						
				</Grid>



				<Button
					Name="removeComponent"
					Content="â€”"
					Grid.Column="2"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Height="30"
					IsVisible="False"
					IsEnabled="False"
					/>
			</Grid>
		</Grid>
	  </StackPanel>
	</Border>
</UserControl>

