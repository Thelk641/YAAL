<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:svg="using:Svg.Controls.Skia.Avalonia"
			 xmlns:local="clr-namespace:YAAL"
             x:Class="YAAL.Setting"
             HorizontalAlignment="Stretch"
             MinHeight="30"
			 MinWidth="270"
             >
	<Border Margin="8,4,8,4">
	  <StackPanel>
		  <Separator Name="Separator"/>
		  <Rectangle Height="8"/>
		<Grid ColumnDefinitions="*, 8, 20, 8, *" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="30" Grid.Column="0">
			<TextBox
				IsVisible="False"
				Name="CustomName"
				Grid.Column="0"
				VerticalAlignment="Center"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				ToolTip.Tip="The name is used to use settings as shortcuts via ${name}"
				/>
			<TextBlock 
				IsVisible="True"
				Text="A setting name"
				Name="SetName"
				Grid.Column="0"
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				ToolTip.Tip="The name is used to use settings as shortcuts via ${name}"
				/>
			<TextBlock
				Text="=>"
				Grid.Column="2"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="25"
				/>
			<Grid ColumnDefinitions="*,8,30" Name="ValueGrid" Grid.Column="4">
				<TextBlock
					IsVisible="True"
					Name="SetValue"
					Text="A setting value"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					Grid.ColumnSpan="3"
					/>
				<Grid 
					Grid.ColumnSpan="3" 
					Grid.Column="0" 
					ColumnDefinitions="*,8,30" 
					IsVisible="False" 
					Name="CustomValueContainer"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					>
					<TextBox
					Name="CustomValue"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					/>
					<Button 
						Name="File"
						Grid.Column="2" 
						HorizontalAlignment="Stretch" 
						VerticalAlignment="Stretch"
						local:AutoIcon.Icon="file"
						>
						<Svg Path="avares://YAAL/Assets/Icons/File_dark.svg"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Width="30"
							Name="FileIcon"
							/>
					</Button>
				</Grid>

				<ComboBox
					IsVisible="False"
					Name="BinaryValue"
					Grid.Column="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					ToolTip.Tip="What will replace ${name}"
					Grid.ColumnSpan="3"
					/>
				<Border
					Name="ColorContainer"
					Height="30"
					Padding="4"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Grid.Column="0" 
					Grid.ColumnSpan="3"
					Background="Black"
					IsVisible="False"
					>
					<Button
						Name="ColorValue"
						Grid.Column="0"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Blue"
						/>
				</Border>


				<Button
					Name="removeComponent"
					Content="â€”"
					Grid.Column="2"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Height="30"
					IsVisible="False"
					IsEnabled="False"
					/>
			</Grid>
		</Grid>
	  </StackPanel>
	</Border>
</UserControl>

