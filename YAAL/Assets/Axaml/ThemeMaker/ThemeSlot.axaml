<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="clr-namespace:YAAL"
	x:Class="YAAL.ThemeSlot"
	HorizontalAlignment="Stretch"
	Height="52"
    >
	<UserControl.Resources>
		<conv:BoolInvert x:Key="BoolInvert"/>
	</UserControl.Resources>
	<!-- Height="52"-->
	<!-- Height="90"-->
	<Border
	 Name="BackgroundColor"
	 BorderBrush="Gray"
	 BorderThickness="1"
	 CornerRadius="4"
	 Padding="8"
	 HorizontalAlignment="Stretch"
	 Background="#FFF"
	 IsVisible="True"
          >
		<StackPanel>
			<StackPanel Name="PlayMode" IsVisible="True">
				<Grid ColumnDefinitions="*,8,*">
					<Grid ColumnDefinitions="60,8,*">
						<Button
							Content="Play"
							Name="RealPlay"
							VerticalAlignment="Stretch"
							VerticalContentAlignment="Center"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Center"
							Grid.Column="0"
							ToolTip.Tip="Launchs the selected game"
							/>
						<Border
							BorderThickness="1"
							BorderBrush="Gray"
							Grid.Column="2"
							Padding="8"
							>
							<TextBlock
							Name="_SlotName"
							Text="This is a slot name"
							VerticalAlignment="Center"
							HorizontalAlignment="Stretch"
							Grid.Column="2"
							ToolTip.Tip="The slot name"
								/>
						</Border>
					</Grid>

					<Grid ColumnDefinitions="*,8,85,8,60" Grid.Column="2">
						<ComboBox 
							Name="ToolSelect"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							VerticalContentAlignment="Center"
							Grid.Column="0"
							/>
						<Button 
							Name="StartTool"
							Content="Start Tool"
							VerticalAlignment="Stretch"
							VerticalContentAlignment="Center"
							Grid.Column="2"
							/>
						<Button
							Name="Edit"
							Content="Edit"
							VerticalAlignment="Stretch"
							VerticalContentAlignment="Center"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Center"
							Grid.Column="4"
							/>
					</Grid>
				</Grid>
			</StackPanel>
			
			
			
			<StackPanel Name="EditMode" IsVisible="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
				<Grid RowDefinitions="*,8,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<Grid Grid.Row="0" ColumnDefinitions="*,8,*" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
						<Grid Grid.Column="0" ColumnDefinitions="45,8,*">
							<Button
								Content="Play"
								Name="FakePlay"
								VerticalAlignment="Center"
								Grid.Column="0"
								ToolTip.Tip="Launchs the selected game"
								IsEnabled="False"
								/>
							<TextBox
								Name="SlotName"
								VerticalAlignment="Center"
								HorizontalAlignment="Stretch"
								Grid.Column="2"
								ToolTip.Tip="The slot name"
								Watermark="Slot name"
								IsVisible="False"
								/>
							<ComboBox
								Name="SlotSelector"
								VerticalAlignment="Center"
								HorizontalAlignment="Stretch"
								Grid.Column="2"
								IsVisible="True"
								ItemsSource="{Binding Cache_DisplaySlot}"
								SelectedItem="{Binding selectedSlot}"
								>
								<ComboBox.Styles>
									<Style Selector="ComboBoxItem">
										<Setter Property="IsEnabled"
												Value="{Binding isHeader, Converter={StaticResource BoolInvert}}" />
										<Setter Property="IsHitTestVisible"
												Value="{Binding isHeader, Converter={StaticResource BoolInvert}}" />
									</Style>
								</ComboBox.Styles>
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<TextBlock 
											Text="{Binding slotName}"
										/>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>
						</Grid>
						<Grid Grid.Column="2" ColumnDefinitions="*,8,60" HorizontalAlignment="Stretch">
							
							<Grid Name="ManualPatch" IsVisible="False" ColumnDefinitions="*,8,40" Grid.Column="0">
								<TextBox
								Name="Patch"
								Grid.Column="0"
								VerticalContentAlignment="Center"
								VerticalAlignment="Center"
								HorizontalAlignment="Stretch"
								ToolTip.Tip="The patch file"
								Watermark="/path/to/patch"
								/>
								<Button
								Name="PatchSelect"
								Content="File"
								Grid.Column="2"
								/>
							</Grid>

							<Grid Name="AutomaticPatch">
								<Button
									Name="DownloadPatch"
									Content="Download patch"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Center"
									HorizontalContentAlignment="Center"
									Grid.Column="0"
									/>
								<Button
									Name="ReDownloadPatch"
									Content="Download patch again"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Center"
									HorizontalContentAlignment="Center"
									Grid.Column="0"
									IsVisible="false"
									/>
							</Grid>

							<Button
								Name="DoneEditing"
								Content="Save"
								Grid.Column="4"
								HorizontalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								/>
						</Grid>
					</Grid>
					<Grid Grid.Row="2" ColumnDefinitions="*,8,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<ComboBox
							Name="SelectedLauncher"
							Grid.Column="0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Center"
							/>
						<Grid ColumnDefinitions="*,8,70,8,60" Grid.Column="2">
							<ComboBox
								Name="SelectedVersion"
								Grid.Column="0"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Center"
								/>
							<Button
								Name="ManualPatchButton"
								Grid.Column="2"
								Content="Manual"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								IsVisible="True"
								/>
							<Button
								Name="AutomaticPatchButton"
								Grid.Column="2"
								Content="Auto"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								HorizontalContentAlignment="Center"
								IsVisible="False"
								/>
							<Button 
								Name="DeleteSlot"
								Grid.Column="4"
								Content="Delete"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								/>
						</Grid>
					</Grid>
				</Grid>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>