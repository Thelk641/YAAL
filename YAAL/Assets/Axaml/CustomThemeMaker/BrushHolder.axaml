<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:svg="using:Svg.Controls.Skia.Avalonia"
			 xmlns:local="clr-namespace:YAAL"
             x:Class="YAAL.BrushHolder"
             HorizontalAlignment="Stretch"
             MinHeight="30"
             >
	<Grid ColumnDefinitions="30,8,30,8,*,8,30,8,30">
		<Button
			Name="Up"
			Grid.Column="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			local:AutoIcon.Icon="Up"
			>
			<Svg
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Width="30"
			/>
		</Button>
		<Button
			Name="Down"
			Grid.Column="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			local:AutoIcon.Icon="Down"
			>
			<Svg
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Width="30"
			/>
		</Button>


		<Grid ColumnDefinitions="*,8,60" Grid.Column="4">
			<Button
				Name="BrushOptions"
				Width="60"
				Height="28"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				/>
			<TextBlock
				Name="BrushType"
				Grid.Column="0"
				Text="Image"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				/>
			<StackPanel
				Name="Holder"
				Width="60"
				Height="28"
				Background="Green"
				Grid.Column="2"
				/>
		</Grid>

		<Button
			Name="Settings"
			Grid.Column="6"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			local:AutoIcon.Icon="Settings"
			>
			<Svg
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Width="20"
			/>
		</Button>


		<Button
			Name="Remove"
			Grid.Column="8"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			local:AutoIcon.Icon="Minus"
			>
			<Svg
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Width="30"
			/>
		</Button>


	</Grid>
</UserControl>

