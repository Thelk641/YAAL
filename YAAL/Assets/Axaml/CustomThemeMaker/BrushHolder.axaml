<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:svg="using:Svg.Controls.Skia.Avalonia"
			 xmlns:local="clr-namespace:YAAL"
             x:Class="YAAL.BrushHolder"
             HorizontalAlignment="Stretch"
             >
	<Border
		Margin="0"
		Padding="4"
		BorderBrush="Gray"
		BorderThickness="1"
		>
		<Grid ColumnDefinitions="30,8,30,8,*,8,30">
			<Button
				Name="Up"
				Content="Up"
				Grid.Column="0"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				local:AutoIcon.Icon="Up"
				Height="30"
				>
				<Svg
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					Width="30"
					/>
			</Button>
			<Button
				Name="Down"
				Content="Up"
				Grid.Column="2"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				local:AutoIcon.Icon="Down"
				Height="30"
				>
				<Svg
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="30"
					/>
			</Button>


			<Grid ColumnDefinitions="*,8,60" Grid.Column="4">
				<TextBlock
					Name="BrushType"
					Grid.Column="0"
					Text="Image"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					/>
				<StackPanel
					Name="Holder"
					Width="60"
					Height="28"
					Background="Green"
					Grid.Column="2"
					/>
			</Grid>

			<Button
				Name="BrushOptions"
				Height="28"
				Grid.Column="3"
				Grid.ColumnSpan="3"
				Background="Transparent"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				/>

			<Button
				Name="Remove"
				Grid.Column="6"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				local:AutoIcon.Icon="Minus"
				Height="30"
				>
				<Svg
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Width="30"
					/>
			</Button>
		</Grid>
	</Border>
</UserControl>

