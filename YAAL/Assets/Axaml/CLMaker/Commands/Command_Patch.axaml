<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="YAAL.Command_Patch"
			 xmlns:local="clr-namespace:YAAL"
             HorizontalAlignment="Stretch"
             Height="140"
             MinWidth="450"
             >     
  <Border 
    Name="BackgroundColor"
    BorderBrush="Gray"
    BorderThickness="1"
    CornerRadius="4"
    Margin="8"
    Padding="8"
    HorizontalAlignment="Stretch"
    Background="#FFF"
          >
        <Grid ColumnDefinitions="30, 8, 100, 8, *">
			<Grid
			RowDefinitions="0,*,8,*,0"
			VerticalAlignment="Stretch"
			HorizontalAlignment="Stretch"
			Grid.Column="0">

				<Button
					Name="MoveUp"
					Width="30"
					Height="30"
					Grid.Row="1"
					HorizontalContentAlignment="Center"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					local:AutoIcon.Icon="Up"
					>
					<Svg
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="30"
						/>
				</Button>

				<Button
					Name="MoveDown"
					Height="30"
					Grid.Row="3"

					HorizontalContentAlignment="Center"
					HorizontalAlignment="Left"
					VerticalAlignment="Bottom"
					local:AutoIcon.Icon="Down"
					>
					<Svg
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="30"
						/>
				</Button>


			</Grid>
          <TextBlock Text="Patch" FontSize="25" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
          <Grid RowDefinitions="0, 1*,8,1*,8,*" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Column="4">
            <Grid ColumnDefinitions="*, 8, 30" Grid.Row="1">
				<ComboBox 
					Name="Mode"
					HorizontalAlignment="Stretch"/>
              <Button Name="X" Content="X" Grid.Column="3" Width="30" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            </Grid>
			  <Grid Name="CopyGrid" IsVisible="False" ColumnDefinitions="*, 8, 60" Grid.Row="3" VerticalAlignment="Center">
				  <TextBox
				  Grid.Column="0"
				  Name="Target"
				  ToolTip.Tip="The folder that will contain this patch file"
				  />
				  <Button 
					  Name="TargetFolder" 
					  Content="Folder" 
					  Grid.Column="2" 
					  Width="60" 
					  HorizontalAlignment="Left" 
					  VerticalAlignment="Top"
					  />
			  </Grid>
			  <Grid Name="ApplyGrid" IsVisible="True" ColumnDefinitions="20,8,*" Grid.Row="3" >
				  <CheckBox
				  Grid.Column="0"
				  Name="Optimize"
				  ToolTip.Tip="Do we need to error out if the selected version doesn't countain this ?"
				  IsChecked="True"
				  />
				  <TextBlock
					  Text="Isolate apworlds"
					  Grid.Column="2"
					  VerticalAlignment="Center"
					  FontSize="16"
				  />
			  </Grid>
			  <Grid ColumnDefinitions="90,8,*" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Stretch">
				  <TextBlock
					  Text="Rename to :"
					  Grid.Column="0"
					  VerticalAlignment="Center"
					  FontSize="16"
				  />
				  <TextBox
				  Grid.Column="2"
				  Name="NewName"
				  ToolTip.Tip="Leave empty to not rename"
				  />
			  </Grid>
          </Grid>
        </Grid>
  </Border>
</UserControl>

